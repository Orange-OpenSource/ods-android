<resources>

    <style name="Widget.Orange.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Orange.Toolbar</item>
        <item name="android:theme">@style/ThemeOverlay.Orange.Toolbar</item>
    </style>

    <style name="Widget.Orange.Toolbar.Raised">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="ThemeOverlay.Orange.Toolbar" parent="">
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="actionMenuTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Orange.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/colorSurface</item>
    </style>

</resources>
