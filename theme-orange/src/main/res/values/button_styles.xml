<resources>

    <style name="Widget.Orange.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Orange.Button</item>
    </style>

    <style name="Widget.Orange.Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="shapeAppearance">@style/ShapeAppearance.Orange.Button</item>
    </style>

    <style name="Widget.Orange.Button.Contained" parent="Widget.Orange.Button" />

    <style name="Widget.Orange.Button.Contained.Icon" parent="Widget.Orange.Button.Icon" />

    <style name="Widget.Orange.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Orange.Button</item>
    </style>

    <style name="Widget.Orange.Button.Text.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="shapeAppearance">@style/ShapeAppearance.Orange.Button</item>
    </style>

    <style name="Widget.Orange.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Orange.Button</item>
        <item name="strokeWidth">@dimen/button_outlined_stroke_width</item>
        <item name="strokeColor">@color/button_stroke_color_selector</item>
        <item name="android:textColor">@color/button_outlined_text_color_selector</item>
        <item name="iconTint">@color/button_outlined_text_color_selector</item>
    </style>

    <style name="Widget.Orange.Button.Outlined.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="shapeAppearance">@style/ShapeAppearance.Orange.Button</item>
        <item name="strokeWidth">@dimen/button_outlined_stroke_width</item>
        <item name="strokeColor">@color/button_stroke_color_selector</item>
        <item name="android:textColor">@color/button_outlined_text_color_selector</item>
        <item name="iconTint">@color/button_outlined_text_color_selector</item>
    </style>

    <style name="Widget.Orange.Button.Outlined.IconOnly" parent="Widget.Orange.Button.Outlined.Icon">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/mtrl_btn_icon_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_icon_btn_padding_left</item>
        <item name="android:minWidth">@dimen/mtrl_min_touch_target_size</item>
        <item name="android:minHeight">@dimen/mtrl_min_touch_target_size</item>
    </style>

    <style name="ShapeAppearance.Orange.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/button_corner_size</item>
    </style>

</resources>
