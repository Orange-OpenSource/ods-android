<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Orange Design System theme for night mode. -->
    <style name="Theme.Orange" parent="Base.Theme.Orange">
        <item name="colorPrimary">@color/core_orange_100</item>
        <item name="colorPrimaryVariant">@color/core_orange_100</item>
        <item name="colorOnPrimary">@color/core_black_900</item>

        <item name="colorSecondary">@color/core_orange_100</item>
        <item name="colorSecondaryVariant">@color/core_orange_100</item>
        <item name="colorOnSecondary">@color/core_black_900</item>

        <item name="android:colorBackground">@color/core_black_900</item>
        <item name="colorOnBackground">@color/core_white_100</item>

        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/core_white_100</item>

        <item name="colorError">@color/functional_negative_100</item>
        <item name="colorOnError">@color/core_black_900</item>

        <item name="android:textColorPrimary">@color/core_white_100</item>
        <item name="android:textColorSecondary">@color/core_white_100</item>

        <!-- Custom ODS attributes -->
        <item name="orangeSliderHaloBackground">@color/core_orange_200</item>
        <item name="orangeBadgeTextColor">@color/core_white_100</item>
        <item name="functionalAlert">@color/functional_alert_100</item>
        <item name="functionalPositive">@color/functional_positive_100</item>
        <item name="functionalInfo">@color/functional_info_100</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

</resources>
